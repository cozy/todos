@import 'nib'
@import 'base'

basecolor = #34A6FF
contrastcolor = #9D9
actioncolor = #fe8800


@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

body
    font-family: styled, helvetica

html
    overflow: hidden

// layout

#home-view
  height 100%
  margin 0
  padding 0

#nav
  margin 0
  padding 0
  background-color bgcolornav


#todo-list
  background-color #FCFCFC
  padding-bottom: 1%
  overflow: hidden
  border: 0


#todo-list h2
  padding 1% 

#content 
  padding: 0

.task
    padding 3px 2%

    input
        border: 1px solid transparent
        border-radius: 20px
        padding-left: 10px
        shadow: none
        font-family: styled, helvetica

.task:hover
    input
        border: 1px solid #DDD
        border: 1px solid rgba(82, 168, 236, 0.8)
        color: #333
        border-radius: 20px
        padding-left: 10px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)

.task
    input:focus
    input:active
        border: 1px solid actioncolor
        color: #333
        border-radius: 20px
        padding-left: 10px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)

.task button
  float left

.done button
    background: contrastcolor
    border-color: contrastcolor

.done .description
  color #AAA
  text-decoration line-through
  

.task .description
  margin-left: 1% 
  font-size: 16px
  height:22px
  width: 90%
  padding: 4px 10px
  background-color: #FCFCFC
  margin-bottom 0

.todo-button
  width: 6%

.task-buttons
  float right
  margin-top: 6px
  margin-right: 2%

.todo-list-title
  border-bottom 1px solid #CCC
  padding-left: 1% 
  margin-bottom: 3%
  margin-top: 1%
  margin-left: 1%
  margin-right: 1%

.todo-list-title .description
  font-weight bold
  font-size 30px
  font-variant small-caps
  line-height 40px
  margin-left 0

.todo-list-title button
  float right


.archive-title
  font-size: 16px
  border-bottom: 1px solid #CCC
  margin: 3% 1% 2% 1%

.todo-list-title .description
  margin-bottom: 2px


