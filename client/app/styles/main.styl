.breadcrumb
  background: none 
  border: none 
  font-size: 12px
  padding: 2px
  margin: 0
  text-transform: lowercase

  a 
    color: #333

  a:hover
    font-size: 12px
    font-weight: normal

.task-infos
  font-size: 12px
  color: #AAA

.completion-date
  font-size: 12px
  border-bottom: 1px solid #EEE
  margin-bottom: 5px


/* buttons */

.btn
    border: 1px solid basecolor
    background: basecolor
    color: white
    shadow: 0 1px 0 rgba(255, 255, 255, 0.4) inset, 0 1px 2px rgba(0, 0, 0, 0.05)
    text-shadow: none
    font-family: main

.btn:hover
    background: #45C7F5
    color: white

.btn:active
    background: #23A5E3
    shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color: white

.btn-info
    margin-top: 2px
    background: basecolor
    border: 1px solid basecolor
    shadow: 0 1px 0 rgba(255, 255, 255, 0.4) inset, 0 1px 2px rgba(0, 0, 0, 0.05)

.btn-info:hover
    background: actioncolor + 20%
    border-color: actioncolor + 20%
    font-weight: bold

.btn-info:active
    background: actioncolor -20%
    border-color: actioncolor - 20%
    font-weight: bold

/* tags */

#tags
    margin-left: 20px
    padding: 10px 0
    border-bottom: 1px solid #999

    a
        line-height: 14px
        color: #333
        cursor: pointer

    a:hover
        font-weight: normal

    a.selected
        background: #C5EBF9

/* responsive */

@media (max-width: 700px)
  .modal
    position absolute
    margin 0
    left 0
    top 0
    width: 100%
    height: 100%
    overflow scroll

  .todo-button
    width: 20%

  .task .description
    width: 75%

  .ui-layout-toggler
      display: none
