@import 'nib'
@import 'base'

basecolor = #34A6FF
contrastcolor = #5C5
actioncolor = #fe8800

@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

body
    font-family: styled, helvetica

html
    overflow: hidden

// layout

#home-view
  height 100%
  margin 0
  padding 0

#nav
  margin 0
  padding 0
  background-color bgcolornav

#todo-list
  background-color #FCFCFC
  padding-bottom: 1%
  overflow: hidden
  border: 0

#todo-list h2
  padding 1%

#content
  padding: 0

// Tasks


.task
    padding: 0 2%

    input
        padding-left: 1%
        border: 1px solid transparent
        border-radius: 0px
        shadow: none
        font-family: styled, helvetica

.task
    input:hover, input.hovered
        padding-left: 1%
        border: 1px solid actioncolor
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

.task
    input:focus
    input:active
        padding-left: 1%
        border: 1px solid rgba(82, 168, 236, 0.8)
        border-radius: 0px
        shadow: inset 1px 1px 2px rgba(100, 100, 100, 0.1)
        color: #333

.task button
  float left

/* Drag'N'Drop handling */
.task .handle
  width: 25px
  height: 32px
  line-height: 35px
  text-align: center
  display: none
  background: url('../img/todos-handle.png') no-repeat center center
  background-size: 20px 20px
  opacity: 0.5

.separator
  width: 100%
  height: 0
  display: block
  visibility: hidden
  border-bottom: 1px solid #CCC

[draggable]
  user-select none
  /* end Drag'N'Drop */

.done button
    background: contrastcolor
    border-color: contrastcolor
    padding: 6px
    margin-top: 2px

.done button:hover
    background: actioncolor
    border-color: actioncolor

.done .description
  color #AAA
  text-decoration line-through
  margin-top: 0px


.task .description
  margin-left: 1%
  font-size: 16px
  height:22px
  width: 88%
  padding: 4px 1%
  background-color: #FCFCFC
  margin-top: 2px
  margin-bottom: 4px

.info
    font-size: 10px
    color: #777
    padding-left: 20px

.todo-button
  width: 6%

.add-button
  width: 6%

.task.new-task
  position: relative
  display: none

  button.add-task
    background: actioncolor
    border-color: actioncolor
    width: 6%

  input
    border: 1px solid #ccc
    color: #ccc
  input:focus
    color: #333


.task-buttons
  float right
  margin-top: 6px
  margin-right: 2%

#todo-list
    header
        margin-top: 20px
        position: relative

        button.toggle-task-form
          opacity: 0.2
          position: absolute
          right: 18px
          bottom: 0
          background: #FFB866 !important
          border-color: #FFB866
          &:hover
            font-weight: normal

.todo-list-title
  border-bottom 1px solid #CCC
  padding-left: 1%
  margin-bottom: 3%
  margin-top: 1%
  margin-left: 1%
  margin-right: 1%

.todo-list-title .description
  font-weight bold
  font-size 30px
  font-variant small-caps
  line-height 40px
  margin-left 0

.todo-list-title button
  float right


.archive-title
  font-size: 16px
  border-bottom: 1px solid #CCC
  margin: 3% 1% 2% 1%

.todo-list-title .description
  margin-bottom: 2px

.breadcrumb
  background: none
  border: none
  font-size: 12px
  padding: 2px
  margin: 0
  text-transform: lowercase

  a
    color: basecolor

  a:hover
    font-size: 12px
    font-weight: normal
    color: actioncolor

.task-infos
    font-size: 12px
    color: #AAA

    a
        color: basecolor

    a:hover
    a:active
    a:focus
        font-size: 12px
        font-weight: normal
        color: actioncolor
        border: 0

.completion-date
    font-size: 12px
    border-bottom: 1px solid #EEE
    margin-bottom: 5px


/* buttons */

.btn
    border: 1px solid basecolor
    background: basecolor
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main

.btn:hover
    background: #45C7F5
    color: white

.btn:active
    background: #23A5E3
    shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color: white

.btn-info
    margin-top: 2px
    background: basecolor
    border: 1px solid basecolor
    box-shadow: none
    padding: 6px

.btn-info:hover
    background: actioncolor + 20%
    border-color: actioncolor + 20%
    font-weight: bold

.btn-info:active
    background: actioncolor -20%
    border-color: actioncolor - 20%
    font-weight: bold

 #new-task-button
     width: 150px
     margin-left: 20px

/* tags */

#tags
    margin-left: 20px
    padding: 10px 0

    a
        line-height: 14px
        color: #333
        cursor: pointer

    a:hover
        font-weight: normal


/* responsive */

@media (max-width: 700px)
  .modal
    position absolute
    margin 0
    left 0
    top 0
    width: 100%
    height: 100%
    overflow scroll

  .todo-button
    width: 20%

  .task .description
    width: 75%

  .ui-layout-toggler
      display: none
