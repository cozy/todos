basecolor = #34A6FF
contrastcolor = #5C5
actioncolor = #fe8800

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

#nav
    position absolute
    bottom 10px
    top 10px
    right 0px
    left 10px
    margin-bottom 0
    font-family: main

#tree
    font-size 14px
    background-color transparent
    margin-top 15px
    outline none
    padding-left 8px

#tree li
    padding 0
    position relative

#tree ins
    width 14px

#tree a
    padding 0px 0px 0px 0px
    margin  0px 0px 0px 0px
    border  0px 0px 0px 0px solid transparent
    color treelinkcolor
    left 15px
    right 0px
    position absolute
    font-weight: normal

#tree a.jstree-clicked
    background #CBE4FB
    border 0

#tree a.jstree-hovered
    border 0
    background actioncolor + 50%
    font-weight: normal
    font-size: 13.5px

.jstree-rename-input
    margin-left: -18px
    
#tree-buttons-root
    display none
    top 0
    position absolute
    right 10px
    top    0px
    
#tree-buttons-root div
    display inline
    cursor pointer
    padding-left 3px
    
#tree-buttons
    display none
    top 0
    position absolute
    right 10px
    top    0px

#tree-buttons div
    display inline
    cursor pointer
    padding-left 3px

#tags
    
    a
        width: 100%

    a:hover
        background-color: actioncolor + 50%
        text-decoration: none
        font-family: main

    .selected
        background: #C5EBF9

// separator between nav-pane and content-pane
.ui-layout-west
  border: 0px  

.ui-layout-center
  border: 0px  
  
.ui-layout-resizer-open:hover
  background white
    
.ui-layout-resizer
  background-color: white
  width: 10px

.ui-layout-pane
  border-right: 0px
  
.ui-layout-toggler
  background-color: #CCC
  border: 0px
  position: absolute
  right: 0px

