@import 'nib'
@import 'base'

// layout

#home-view
  height 100%
  margin 0
  padding 0

#content
  height 100%
  background-color bgcolor
  margin 0
  min-width 400px

#nav
  margin 0
  padding 0

#task-list
  shadow 2px 2px 5px bgshadowcolor 
  border 1px solid objectbordercolor
  background-color #FCFCFC


// To do list

.todo
  padding 10px

.todo:hover
 background-color #EEFFEE

.todo button
  float left

.todo input 
  width 50px
  height 50px
  border 2px solid black

.todo .description
  margin-left 10px
  font-size 22px
  line-height 28px

.todo-title
  border-bottom 1px solid #CCC

.todo-title .description
  font-weight bold
  font-size 30px
  font-variant small-caps
  line-height 40px
  margin-left 0

.todo-title button
  float right

.done .description
  color #AAA
  text-decoration line-through
