{ "name": "cozy-todos"
, "version": "0.5.0"
, "description": "Cozy Todos is a simple task management application that helps you to focus by not wasting time in your todo-lists. Adding tasks is easy as typing in a text editor, but UI is explicit as it should be in a web app."
, "engines": ["node >= 0.8.0"]
, "main": "server.coffee"
, "dependencies":
  { "jade":             "= 0.27.6"
  , "express":          "= 3.0.6"
  , "connect":          "= 2.6.1"
  , "compound":         "= 1.1.6"
  , "coffee-script":    "= 1.4.0"
  , "mime":             "= 1.2.7"
  , "qs":               "= 0.5.0"
  , "jugglingdb":       "= 0.2.0-23"
  , "jugglingdb-cozy-adapter": "0.3.2"
  , "async":            "= 0.1.22"
  , "cozy-realtime-adapter":"= 0.11.0"
  }
, "devDependencies":
  { "request-json":     ">= 0"
  , "mocha":            "= 1.6.0"
  , "chai":             "= 1.3.0"
  , "should":           "= 1.2.0"
  }
, "scripts":
  { "test": "cake tests"
  }
, "cozy-permissions":
  { "Task":
    {"description": "Used to manage your tasks"
    }
  , "TodoList":
    {"description": "Used to sort your tasks"
    }
  , "Tree":
    {"description": "Used to sort your todo lists"
    }
  }
}
